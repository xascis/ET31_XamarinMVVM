<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ET31_XamarinMVVM.View.PaginaDetalle"
             Title="Detalles">
    <Frame Padding="10">
        <StackLayout>
            <Image Source="{Binding Avatar}" HeightRequest="200" WidthRequest="200"/>
            <Label Text="{Binding Name}" />
            <Entry Text="{Binding Title, Mode=OneWay}" TextColor="Purple" x:Name="TituloEditable" />
            <Label Text="{Binding Description}" TextColor="DarkOrange" />
            <Button Text="Hablar" x:Name="BotonHablar" />
            <Button Text="Ir a la web" x:Name="BotonWeb" />
            <Button Text="Guardar" x:Name="BotonGuardar" />
        </StackLayout>
    </Frame>

</ContentPage>